<UserControl x:Class="TCP_IP.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCP_IP"
             mc:Ignorable="d" 
         MinWidth="350" MinHeight="400"
	    Width="350" Height="400" Visibility="Visible">
    <Grid x:Name="MainGrid">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="CreateServer" Content="Создать сервер" Width="150" Height="25"   Margin="10" Click="CreateServer_Click"></Button>
            <Button x:Name="ConnectToServer" Content="Подключится к серверу" Width="150"  Height="25" Margin="10" Click="ConnectToServer_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
