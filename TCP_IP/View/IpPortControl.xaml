<UserControl x:Class="TCP_IP.View.IpPortControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCP_IP.View"
             mc:Ignorable="d" 
             MinWidth="350" MinHeight="400"
	         Width="350" Height="400" Visibility="Visible">
    <Grid x:Name="MainGrid">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="IP: " Padding="0" Height="20"/>
            <TextBox x:Name="tbRemoteIP" Text="127.0.0.1" Width="200" Height="20"/>
            <Label Content="Port: " Padding="0" Height="20"/>
            <TextBox x:Name="tbRemotePort" Text="32123" Width="200" Height="20"/>
            <Button x:Name="buttonConnectOrCreate" Click="buttonConnectOrCreate_Click" Width="200" Height="20" Margin="0 30 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
